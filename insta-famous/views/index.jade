extends layout

block content
  h1.
    Welcome to #{title}
  #wrapper  
    a(href="/userpage/#{userID}" rel="#{userID}").userLink User Page
    a(href="/logout").rightLink Log Out
    br
    a(href="/createpost").rightLink Create Post
    br
    a(href="/previousposts").rightLink Previous Posts
    form(method='post')
      p Search by target audience (click "search" without selections to reset search) 
      each audience, i in tAudience
        input(type="checkbox", name= "#{audience}")
        | #{audience}
      input(type='submit' value="Search")
    h3 Choose advertisers to use!
    #userList
      table(id="myTable" class="display")
        thead
          th Picture
          th Username
          th Price
          th Contact
          th Target Audience
          th Delete?
        tbody
        each user, i in userlist
          tr
            td 
              img(src = "#{user.imgURL}").profPic
            td #{user.fullName}
            td #{user.price}
            td #{user.contact} #{user.username}
            td #{user.targetAudience}
            td
              a(href="#" rel = "#{user._id}").linkdeleteuser Delete?  
    #addUser
      if jUserType == "basic" 
        button(onclick='advertRedirect()')#advertButton Click to Advertise
      else
        a(href="#" rel = "").buttonRevertUser Click to become a basic user (needs to be fixed) 


    h2 #{loggedStatus}



        
        
